#!/bin/bash
source /etc/default/ddns

code=0

if [ "$arecord" ]; then
  if $ifip; then
    ipv4="$(ip route get 8.8.8.8 2>/dev/null | grep -oP '(?<=src )[0-9.]+')"
  else
    ipv4="$(curl -s4 icanhazip.com)"
  fi

  if [ "$ipv4" ]; then
    if ! response="$(curl -sSf -H "Authorization: Bearer $token" -H "Accept: application/json" -H "Content-Type: application/json" -X PATCH -d "{\"content\":\"$ipv4\"}" "https://api.dnsimple.com/v2/$account/zones/$zone/records/$arecord" 2>&1)"; then
      code="$((code+1))"
      echo 'IPv4 Update ('"${zone}"' ('"$arecord"') -> '"$ipv4"'): '"$response" >&2
    fi
  fi
fi

if [ "$aaaarecord" ]; then
  if $ifip; then
    ipv6="$(ip route get 2001:4860:4860::8888 2>/dev/null | grep -oP '(?<=src )[a-f0-9:]+')"
  else
    ipv6="$(curl -s6 icanhazip.com)"
  fi

  if [ "$ipv6" ]; then
    if ! response="$(curl -sSf -H "Authorization: Bearer $token" -H "Accept: application/json" -H "Content-Type: application/json" -X PATCH -d "{\"content\":\"$ipv6\"}" "https://api.dnsimple.com/v2/$account/zones/$zone/records/$aaaarecord" 2>&1)"; then
      code="$((code+1))"
      echo 'IPv6 Update ('"${zone}"' ('"$aaaarecord"') -> '"$ipv6"'): '"$response" >&2
    fi
  fi
fi

exit "$code"
